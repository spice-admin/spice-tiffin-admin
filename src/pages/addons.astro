---
// Import shared layout and dashboard components
import Layout from "../layouts/Layout.astro";
import ProtectDashboard from "../components/auth/ProtectDashboard";
import Leftbar from "../components/dashboard/Leftbar.astro";
import PageTitle from "../components/dashboard/PageTitle.astro";
import Topbar from "../components/dashboard/Topbar.astro";
import AddonManagerWrapper from "../components/management/AddonManagerWrapper";
---

<Layout>
  {/* Protect the route */}
  <ProtectDashboard client:only="react" />

  {/* Standard Dashboard UI */}
  <Topbar title="Addons" />
  <Leftbar />
  <PageTitle title="Addons" activePage="Manage Addons" />

  {/* Main Page Content */}
  <div class="page-wrapper">
    <div class="page-content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-lg-12">
            <div class="card">
              <div class="card-header">
                <div class="row align-items-center">
                  <div class="col">
                    <h4 class="card-title">Addons</h4>
                  </div>
                  <div class="col-auto">
                    <button
                      id="add-addon-button"
                      class="btn btn-sm btn-primary"
                    >
                      <i class="fas fa-plus me-1"></i> Add Addon
                    </button>
                  </div>
                </div>
              </div>
              <div class="card-body pt-0">
                <AddonManagerWrapper client:load />
              </div>
            </div>
          </div>
        </div>
      </div>

      {/* Standard Footer */}
      <footer class="footer text-center text-sm-start d-print-none">
        <div class="container-fluid">
          <div class="row">
            <div class="col-12 px-0">
              <div class="card mb-0 border-0">
                <div class="card-body">
                  <p class="text-muted mb-0">
                    Â© {new Date().getFullYear()}
                    Spice Tiffin
                    <span class="float-end d-none d-sm-inline-block">
                      Design by <strong>IGNITAX</strong>
                      {/* TODO: Update Design Source */}
                    </span>
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </footer>
    </div>
  </div>
  {
    /* The actual modal markup (<ManageAddonModal />) might be rendered 
    within AddonManagerWrapper or placed here directly if you prefer, 
    but typically it's cleaner to keep it within the managing React component.
  */
  }
</Layout>
