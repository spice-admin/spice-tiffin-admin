---
// src/pages/admin/dispatch.astro
import Layout from "../layouts/Layout.astro"; // Your admin panel layout
import ProtectDashboard from "../components/auth/ProtectDashboard"; // Auth protection
import Leftbar from "../components/dashboard/Leftbar.astro";
import Topbar from "../components/dashboard/Topbar.astro";
import PageTitle from "../components/dashboard/PageTitle.astro";
import OrderDispatchManager from "../components/dispatch/OrderDispatchManager.tsx"; // New React component

const pageTitle = "Order Dispatch & Map View";
---

<Layout title={pageTitle}>
  <ProtectDashboard client:only="react" />
  <Topbar title={pageTitle} />
  <Leftbar />
  <PageTitle title={pageTitle} activePage="Dispatch View" />

  <div class="page-wrapper">
    <div class="page-content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-lg-12">
            <OrderDispatchManager client:load />
          </div>
        </div>
      </div>
      {/* ... Your existing footer ... */}
      <footer class="footer text-center text-sm-start d-print-none">
        <div class="container-fluid">
          {/* ... footer content ... */}
        </div>
      </footer>
    </div>
  </div>
</Layout>

<style is:global>
  /* Import Mapbox GL CSS */
  @import "mapbox-gl/dist/mapbox-gl.css";

  /* Optional: Ensure page-wrapper and page-content allow full height for map if needed */
  .page-wrapper,
  .page-content,
  .container-fluid,
  .row,
  .col-lg-12 {
    /* Consider height: 100% or flex properties if map needs to fill space */
  }
</style>
