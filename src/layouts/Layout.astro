---
import "@radix-ui/themes/styles.css";
---

<!doctype html>
<html lang="en" dir="ltr" data-startbar="dark" data-bs-theme="light">
  <head>
    <meta charset="utf-8" />
    <title>Dashboard | Spice Tiffin</title>
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta
      content="Premium Multipurpose Admin & Dashboard Template"
      name="description"
    />
    <meta content="" name="author" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <!-- App favicon -->
    <link rel="shortcut icon" href="assets/images/favicon.ico" />

    <link
      rel="stylesheet"
      href="/assets/libs/jsvectormap/css/jsvectormap.min.css"
    />
    <!-- App css -->
    <link
      href="/assets/css/bootstrap.min.css"
      rel="stylesheet"
      type="text/css"
    />
    <link href="/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <link href="/assets/css/app.min.css" rel="stylesheet" type="text/css" />
    <meta name="generator" content={Astro.generator} />
  </head>
  <body>
    <slot />
    <script is:inline>
      window.logoutAdmin = function () {
        localStorage.removeItem("token");
        window.location.href = "/";
      };
    </script>
    <script is:inline src="/assets/libs/bootstrap/js/bootstrap.bundle.min.js"
    ></script>
    <script is:inline src="/assets/libs/simplebar/simplebar.min.js"></script>
    <script is:inline src="/assets/libs/iconify-icon/iconify-icon.min.js"
    ></script>
    <script is:inline src="/assets/libs/apexcharts/apexcharts.min.js"></script>
    <script is:inline src="/assets/libs/jsvectormap/js/jsvectormap.min.js"
    ></script>
    <script is:inline src="/assets/libs/jsvectormap/maps/world.js"></script>
    <script is:inline src="/assets/js/pages/ecommerce-index.init.js"></script>
    <script is:inline src="/assets/js/app.js"></script>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
